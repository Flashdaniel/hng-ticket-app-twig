<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Ticket Management App{% endblock %}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="{{ base_path() }}/assets/css/styles.css">
    {% block head %}{% endblock %}
</head>
<body>
    <header class="header">
        <nav class="nav">
            <a href="/" class="logo">TicketApp</a>
            <div class="nav-links" id="navLinks">
                <!-- Navigation links will be updated by JavaScript -->
            </div>
        </nav>
    </header>

    <script>
        function updateNavigation() {
            const isAuthenticated = localStorage.getItem('isAuthenticated') === 'true';
            const navLinks = document.getElementById('navLinks');
            
            if (isAuthenticated) {
                navLinks.innerHTML = `
                    <a href="/dashboard">Dashboard</a>
                    <a href="/tickets">Tickets</a>
                    <button onclick="handleLogout()" class="cta-button secondary">Logout</button>
                `;
            } else {
                navLinks.innerHTML = `
                    <a href="/auth/login">Login</a>
                    <a href="/auth/signup">Sign Up</a>
                `;
            }
        }

        function handleLogout() {
            localStorage.removeItem('isAuthenticated');
            localStorage.removeItem('user');
            window.location.href = '/auth/login';
        }

        // Update navigation when page loads
        updateNavigation();
    </script>

    <main>
        {% block content %}{% endblock %}
    </main>

    <footer class="footer">
        <div class="footer-content">
            <div>Â© 2023 TicketApp. All rights reserved.</div>
            <div class="footer-links">
                <a href="/">Home</a>
                <a href="/about">About</a>
                <a href="/contact">Contact</a>
            </div>
        </div>
    </footer>

    <script src="{{ base_path() }}/assets/js/main.js"></script>
    <script src="{{ base_path() }}/assets/js/tickets.js"></script>
    {% block scripts %}{% endblock %}
</body>
</html>